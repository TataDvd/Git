<Window x:Class="Tempo2012.UI.WPF.WorkFlowViews.Step2AddNomenclatures"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изберете Полета за номенклатурата" Height="281" Width="514">
    <Grid Height="247" Width="502">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock>Всички полета</TextBlock>
            <ListBox ></ListBox>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="&lt;"></Button>
            <Button Content="&lt;&lt;"></Button>
            <Button Content=">"></Button>
            <Button Content=">>"></Button>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <TextBlock>Избрани полета</TextBlock>
            <ListBox ></ListBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2"  Orientation="Horizontal" Height="30">
            <Button Content="   Отказ    " Height="25"></Button>
            <Button Content="Продължи" Height="25"></Button>
        </StackPanel>
    </Grid>
</Window>
