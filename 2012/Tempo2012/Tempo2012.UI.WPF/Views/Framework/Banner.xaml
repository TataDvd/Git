<UserControl x:Class="Tempo2012.UI.WPF.Banner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:customControls="clr-namespace:Tempo2012.UI.WPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Rectangle Height="50" Style="{StaticResource BannerBar}" />
        <Rectangle HorizontalAlignment="Center" Height="40" Margin="5"  Width="260" Style="{StaticResource BannerInlay}" />
        <TextBlock HorizontalAlignment="Center" Height="50" Text="TEMPO" Style="{StaticResource BannerInlayText}"/>
        <Border Grid.Row="1" CornerRadius="5" BorderThickness="4" BorderBrush="Azure">
            <RichTextBox x:Name="ReclaMa"  Margin="10,10,10,10" IsReadOnly="True" >
                
            </RichTextBox>
        </Border>
    </Grid>

</UserControl>
