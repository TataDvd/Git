                <CustomControls:TextBoxEx Grid.Row="1"  Grid.Column="3"   Text="{Binding Path=Date,Mode=TwoWay,StringFormat={}{0:dd/MM/yyyy}}" IsEnabled="False" Margin="10,5,10,2"/>
