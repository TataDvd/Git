<Window x:Class="Tempo2012.UI.WPF.Views.Dialogs.SelectSimpleAcc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:customControls="clr-namespace:Tempo2012.UI.WPF.CustomControls"
        Title="Избери сметка или * за всички" Height="120" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <customControls:TextBoxEx  Margin="10,0,10,0" Width="130" x:Name="EntryAcc"
                                              HorizontalAlignment="Left"  KeyDown="EntryAcc_KeyDown"
                                              TabIndex="1" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button TabIndex="2" Content="Избери" Margin="10,5,10,2" Click="Button_Click" />
            <Button TabIndex="3" Content="Откажи" Margin="10,5,10,2" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
