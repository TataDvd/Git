<Window x:Class="YesNoApp.YesNoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="250" Width="490" WindowStyle="None" WindowStartupLocation="CenterScreen">
<Grid>
    <Grid.RowDefinitions>
    <RowDefinition Height="30"></RowDefinition>
        <RowDefinition Height="170"></RowDefinition>
        <RowDefinition Height="30"></RowDefinition>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <TextBlock  Margin="10,5,10,5" Grid.Row="0" Name="Tit" Grid.ColumnSpan="3"></TextBlock>
    <TextBox  Grid.Row="1" Margin="10,10,10,10" Name="Mes" Grid.ColumnSpan="3" TextWrapping="Wrap" FontSize="16" FontWeight="Bold"></TextBox>
        <Button Grid.Row="2" Grid.Column="1" Content="Избор" Margin="10,10,10,0" IsDefault="True" Click="Button_Click" Name="Choisorcho"></Button>
        <Button Grid.Row="2" Grid.Column="2" Content="Отказ" Margin="10,10,10,0" IsCancel="True" Name="Cancelcho"></Button>
    </Grid>
</Window>
